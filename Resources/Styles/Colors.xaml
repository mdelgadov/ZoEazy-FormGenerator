    <Color x:Key="TertiaryContainerDark">#8b7301</Color>
    <Color x:Key="OnTertiaryContainerDark">#fef1b0</Color>


    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource Shadow}" />
    <SolidColorBrush x:Key="ShadowBrushDark" Color="{StaticResource ShadowDark}" />

    <RadialGradientBrush x:Key="FlyoutHeaderBrush" Center="0.0,0.0" Radius="0.8">
        <GradientStop Offset="0.1" Color="{StaticResource PrimaryDark}" />
        <GradientStop Offset="1" Color="{StaticResource Primary}" />
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="FlyoutHeaderBrushDark" Center="0.0,0.0" Radius="0.8">
        <GradientStop Offset="0.1" Color="{StaticResource Primary}" />
        <GradientStop Offset="1" Color="{StaticResource PrimaryDark}" />
    </RadialGradientBrush>


    <LinearGradientBrush x:Key="PrimaryContainerBrush">
        <GradientStop Offset="0" Color="{StaticResource Primary}" />
        <GradientStop Offset="1" Color="{StaticResource PrimaryDark}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryContainerBrushDark">
        <GradientStop Offset="0" Color="{StaticResource PrimaryDark}" />
        <GradientStop Offset="1" Color="{StaticResource Primary}" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="{StaticResource OnSecondaryContainer}" />

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariant}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
